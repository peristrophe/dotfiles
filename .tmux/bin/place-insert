#!/bin/bash

cd "${1}"
topPath=$(git rev-parse --show-toplevel)

if [ -n "${topPath}" ];
then
    relativePath=$(echo "${1}" | sed "s%${topPath}%%")
    repositoryName=$(basename ${topPath})
    [ ! -n "${relativePath}" ] && relativePath="/"
    echo "${repositoryName} #[fg=colour231]î‚±#[fg=colour117] #[nobold]${relativePath}"
else
    echo "${1}"
fi
